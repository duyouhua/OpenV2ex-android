<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/topic_detail_footer"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_gravity="bottom"
    android:background="@color/grey100"
    app:layout_behavior="licrafter.com.v2ex.util.behavior.FooterBehavior">

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/grey400" />

    <TextView
        android:id="@+id/footer_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_large"
        android:layout_marginRight="@dimen/margin_large"
        android:gravity="center"
        android:drawablePadding="2dp"
        android:drawableTop="@mipmap/ic_comment"
        android:textColor="@color/grey500"
        android:textSize="@dimen/text_small" />

    <TextView
        android:id="@+id/footer_shoucang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/margin_large"
        android:layout_toLeftOf="@id/footer_comment"
        android:drawablePadding="2dp"
        android:drawableTop="@mipmap/ic_shoucang"
        android:text="收藏"
        android:textColor="@color/grey500"
        android:textSize="@dimen/text_small" />
</RelativeLayout>